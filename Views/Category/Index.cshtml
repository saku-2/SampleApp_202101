@model SampleApp_202101.Models.Category

@{
    ViewBag.Title = "カテゴリーつくるよ♪";
}

<h2>カテゴリーつくるよ♪</h2>

@using (Html.BeginForm("MakeCategory", "Category"))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.TodoCategoryContents, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TodoCategoryContents, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TodoCategoryContents, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <input type="submit" class="btn btn-primary" value="Category" onclick="location.href='@Url.Action("MakeCategory", "Category", new { id = "1" })'" />
        <input type="submit" name="Search" value="Category">
        @Html.HiddenFor(model => model.UserId);

    </div>

}

<div>
    <input type="button" class="btn btn-primary" value="戻る" onclick="location.href='@Url.Action("Index", "Menu")'" />
    @*@Html.ActionLink("Back to List", "Index")*@
</div>
